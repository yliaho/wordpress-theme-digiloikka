<div class="leader-box">
    <div class="leader-thumb-container">
        <div class="leader-thumbnail" style="background-image: url('{{leader.leader_thumbnail}}')"></div>
    </div>
    <div class="leader-text">
        <h3>{{leader.leader_title}}</h3>
        <span class="job-title">{{leader.job_title}}</span>
        <span class="email">
            <a href="mailto:{{leader.email}}">{{leader.email}}</a>
        </span>
        <span class="phone-number">{{leader.phone_number}}</span>
        <a href="{{leader.vcard}}">
            <span>Vcard</span>
        </a>
    </div>
</div>