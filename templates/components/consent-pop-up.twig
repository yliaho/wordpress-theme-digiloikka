            <a class="gdpr-button1" href="{{gdpr_popup_en.gdpr_button_link_en}}">
                {{gdpr_popup_en.gdpr_popup_button_text1_en}}
            </a>
        {% endif %}
    </div>
{% else %}
    <div id="close" class="gdpr-pop">
        <p class="gdpr-text">{{gdpr_popup_sv.gdpr_popup_text_sv}}</p>
        {% if gdpr_popup_sv.gdpr_popup_button_text_sv %}
